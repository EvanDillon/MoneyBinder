<h2>
  <text-align>
  <center>
  Sign In
  </center>
  </text-align>
</h2>
<div class="container">
    <%= form_tag login_path do %>
    <div class="form-group">
      <h2>
      <text-align>
      <center>
      <%= label_tag 'Username' %>
      </center>
      </text-align>
      <%= text_field_tag :username, nil, placeholder: 'Enter Username', class: 'form-control' %>
      </h2>
    </div>
    <div class="form-group">
      <h2>
      <text-align>
      <center>
      <%= label_tag 'Password' %>
      </center>
      </text-align>
      <%= password_field_tag :password, nil, placeholder: 'Enter Password', class: 'form-control' %>
      </h2>
      <%= link_to 'Forgotten password?', password_reset_path, class: 'form-text text-muted', data: {icon: 'info', mini: 'true', role: 'button'} %>
    </div>
      <%= submit_tag "Log In", class: "btn btn-primary"%>
    <%end%>
    <%= button_to "Create new User", '/users/new', method: :get, class: "btn btn-light"%>
</div>
