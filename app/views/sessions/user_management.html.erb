
<%= render partial: "shared/navigation_bar"%>
<div class="container">
    <% if current_user.userType == 1 %>
        <text-align>
            <center>
                <h1>User Management</h1>
            </center>
        </text-align>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Role</th>
                    <th scope="col">Active</th>
                    <th scope="col"></th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                <% @all_users.each do |user| %>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phoneNum %></td>
                        <td><%= user.address %></td>
                        <td><%= user.userType %></td>
                        <td><%= user.active %></td>
                        <td><%= link_to 'Edit', "user/edit/#{user.id}"%></td>
                        <td><%= link_to 'Delete', "user/destroy/#{user.id}"%></td>
                    </tr>
                <%end%>>
            </tbody>
        </table>
        <a class="btn btn-primary" href="/create" role="button">Create New User</a>



    <% else %>
        <text-align>
            <center>
                <h1>Forbidden. You do not have access to this page.</h1>
            </center>
        </text-align>
    <% end %>
</div>
