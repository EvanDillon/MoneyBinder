
<%= render partial: "shared/navigation_bar"%>
<div class="container">
    <% if current_user.userType == 1 %>
        <text-align>
            <center>
                <h1>User Management</h1>
            </center>
        </text-align>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Role</th>
                    <th scope="col">Active</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                <% @all_users.each do |user| %>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phoneNum %></td>
                        <td><%= user.address %></td>
                        <% if user.userType == 1 %>
                            <td><%= 'Administrator' %></td>
                        <%elsif user.userType == 2 %>
                            <td><%= 'Manager' %></td>
                        <%elsif user.userType == 3 %>
                            <td><%= 'Accountant' %></td>
                        <%end%>
                        <td><%= user.active %></td>
                        <td><%= link_to 'Edit', "user/edit/#{user.id}"%></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
        <a class="btn btn-primary" href="/create" role="button">Create New User</a>
        <a class="btn btn-primary" href="/expired_passwords" role="button">View Expired Passwords Report</a>
        <a class="btn btn-primary" href="/send_message" role="button">Send Email</a>
    <% else %>
        <text-align>
            <center>
                <h1>Forbidden. You do not have access to this page.</h1>
            </center>
        </text-align>
    <% end %>
</div>
