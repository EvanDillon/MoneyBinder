
<%= render partial: "shared/navigation_bar"%>
<div class="container">
  <% if current_user.userType == 1 %>
    <h1 class="text-center">User Management</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Address</th>
          <th scope="col">Role</th>
          <th scope="col">Active</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% @all_users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.phoneNum %></td>
            <td><%= user.address %></td>
            <% if user.userType == 1 %>
                <td><%= 'Administrator' %></td>
            <%elsif user.userType == 2 %>
                <td><%= 'Manager' %></td>
            <%elsif user.userType == 3 %>
                <td><%= 'Accountant' %></td>
            <%end%>
            <td><%= user.active %></td>
            <td><%= link_to 'Edit', "user/edit/#{user.id}"%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
    <div class="row">
      <%= button_to "Create New User", new_user_path, method: :get, class: "btn btn-primary" %>
      <%= button_to "View Expired Passwords Report", expired_passwords_path, method: :get, class: "btn btn-primary" %>
      <%= button_to "Send Email", send_message_path, method: :get, class: "btn btn-primary" %>
    </div>
  <% else %>
    <h1 class= "text-center">Forbidden. You do not have access to this page.</h1>
  <% end %>
</div>
