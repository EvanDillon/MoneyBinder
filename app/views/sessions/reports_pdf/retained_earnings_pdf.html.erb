<div style="margin: auto; width: 90%; border: 3px solid #0275d8; padding: 10px;">
  <div style="margin: auto; width: 50%; text-align:center;">
    <h2>Addams & Family Inc.</h2>
    <h2>Trial Balance</h2>
    <h3>For the period ending <%= Date.new(2021, 12, 31).strftime("%B %d, %Y") %></h3>
  </div><br>
  
  <div style="margin: auto; width: 75%; text-align:left; ">
    <table style="width: 100%;">
      <tbody>
        <tr>
          <td>Retained Earnings, beginning</td>
          <td style="text-align:right;">$<%= number_with_precision(@beginning_balance, precision: 2, delimiter: ',') %></td>
        </tr>
        <tr>
          <td>Net Income</td>
          <td style="text-align:right;">$<%= number_with_precision(@net_income, precision: 2, delimiter: ',') %></td>
        </tr>
        <tr style="background-color: #e2e3e5;">
          <td><b>Total Income</b></td>
          <td style="text-align:right;" style="text-decoration-line: underline; text-decoration-style: underline;"><b>$<%= number_with_precision(@beginning_balance + @net_income, precision: 2, delimiter: ',') %></b></td>
        </tr>
        <tr>
          <td>Less Drawings (Dividends)</td>
          <td style="text-align:right;">$<%= number_with_precision(@less_drawings, precision: 2, delimiter: ',') %></td>
        </tr>
        <tr style="background-color: #cce5ff;">
          <td><b>Retained Earnings, ending</b></td>
          <td style="text-align:right; text-decoration: underline;"><b>$<%= number_with_precision((@beginning_balance + @net_income) - @less_drawings, precision: 2, delimiter: ',') %></b></td>
        </tr>
      </tbody>
    </table>
  </div><br><br>
</div>

<style>
  table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
    }
</style>