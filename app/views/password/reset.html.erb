<h1>Reset Password for <%= @user.username%></h1>
<%= form_tag('/password/reset', method: 'post') do %>
  <%= password_field_tag :password, nil, placeholder: 'Enter Password' %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag "token", @user.reset %>
  <%= submit_tag "Submit"%>
<%end%>
<%= link_to 'Back to Login', welcome_path %>
