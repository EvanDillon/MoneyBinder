<%= form_with(model: account) do |f| %>
  <div class="form-group row ">
    <%= f.label "Account name:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Account number:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :account_number %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Normal Side:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :normal_side, "Debit", checked: true %> Debit <br>
      <%= f.radio_button :normal_side, "Credit" %> Credit
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label "Category:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :category, options_for_select([["Asset", "Asset"], ["Expense", "Expense"], ["Liability", "Liability"], ["Equity", "Equity"], ["Revenues", "Revenues"]], selected: account.category), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Subcategory:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subcategory %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label "Initial Balance:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">$
      <%= f.text_field :initial_balance %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Statement:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :statement, options_for_select([["Income Statement", "IS"], ["Balance Sheet", "BS"], ["Retained Earnings", "RE"]], selected: account.statement), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Description:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Comment:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :comment %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Active:", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.check_box :active, disabled: @account.balance > 0 %>    
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>